@model KTU.WebApp.Model.LoginViewModel
@{
	ViewData["Title"] = "Login";
}
<div class="wrapper">

	@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-signin" }))
	{
		<h2 class="form-signin-heading">Please login</h2>
		<div class="form-group">
			@Html.ValidationMessageFor(s => s.UserName)
			@Html.TextBoxFor(s => s.UserName, new { @class = "form-control", placeholder = "User Name" })
		</div>
		<div class="form-group">
			@Html.ValidationMessageFor(s => s.Password)
			@Html.TextBoxFor(s => s.Password, new { @class = "form-control", placeholder = "Password" })
		</div>
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
		</div>
	}
</div>

